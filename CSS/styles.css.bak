/* Modern Dark Theme CSS */

/* ===== VARIABLES ===== */
:root {
    --primary-color: #6366f1;        /* Modern indigo/blue */
    --secondary-color: #8b5cf6;      /* Purple accent */
    --accent-color: #ec4899;        /* Pink accent */
    --text-color: #e5e7eb;          /* Light gray text */
    --text-secondary: #9ca3af;      /* Muted text */
    --background-color: #0f172a;     /* Dark blue background */
    --surface-color: #1e293b;        /* Dark surface */
    --surface-elevated: #334155;    /* Elevated surface */
    --border-color: #334155;         /* Border color */
    --shadow-color: rgba(0, 0, 0, 0.3);
    --shadow-glow: rgba(99, 102, 241, 0.2);
}

/* ===== RESET & BASE STYLES ===== */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html {
    scroll-behavior: smooth;
}

body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    line-height: 1.6;
    color: var(--text-color);
    background-color: var(--background-color);
    animation: fadeIn 0.8s ease-out;
    position: relative;
    min-height: 100vh;
}

/* Particle canvas background */
#particles-canvas {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    pointer-events: none;
}

/* Ensure content is above particles */
nav, main, footer {
    position: relative;
    z-index: 1;
}

@keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
}

/* ===== NAVIGATION ===== */
nav {
    background: rgba(30, 41, 59, 0.8);
    backdrop-filter: blur(10px);
    padding: 1.2rem;
    box-shadow: 0 4px 20px var(--shadow-color);
    border-bottom: 1px solid var(--border-color);
}

nav ul {
    list-style: none;
    display: flex;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
}

nav a {
    color: var(--text-color);
    text-decoration: none;
    padding: 0.6rem 1.2rem;
    border-radius: 8px;
    position: relative;
    transition: all 0.3s ease;
    font-weight: 500;
}

nav a:hover {
    color: var(--primary-color);
    background: rgba(99, 102, 241, 0.1);
}

/* Underline animation */
nav a::after {
    content: "";
    position: absolute;
    left: 50%;
    bottom: 0;
    width: 0%;
    height: 2px;
    background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
    transition: all 0.3s ease;
    transform: translateX(-50%);
}

nav a:hover::after {
    width: 80%;
}

/* ===== MAIN CONTENT ===== */
main {
    max-width: 1200px;
    margin: 2rem auto;
    padding: 0 2rem;
}

h1 {
    color: var(--text-color);
    margin-bottom: 2rem;
    font-size: 2.8rem;
    letter-spacing: -0.5px;
    text-align: center;
    font-weight: 700;
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

h2 {
    color: var(--text-color);
    margin: 2rem 0 1rem 0;
    letter-spacing: -0.3px;
    font-weight: 600;
    font-size: 1.8rem;
}

h3 {
    color: var(--text-color);
    font-weight: 600;
}

/* Interactive cards with glassmorphism */
section {
    margin-bottom: 3rem;
    background: rgba(30, 41, 59, 0.6);
    backdrop-filter: blur(10px);
    padding: 2.5rem;
    border-radius: 16px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 8px 32px var(--shadow-color);
    transition: all 0.3s ease;
}

section:hover {
    transform: translateY(-6px);
    box-shadow: 0 12px 40px var(--shadow-color), 
                0 0 30px rgba(99, 102, 241, 0.5),
                0 0 60px rgba(99, 102, 241, 0.3),
                0 0 90px rgba(139, 92, 246, 0.2);
    border-color: rgba(99, 102, 241, 0.6);
}

/* Images */
img {
    max-width: 100%;
    height: auto;
    border-radius: 12px;
    transition: transform 0.3s ease;
    box-shadow: 0 4px 20px var(--shadow-color);
}

img:hover {
    transform: scale(1.03);
    box-shadow: 0 8px 30px var(--shadow-color);
}

/* Hobbies page layout - images next to text */
.hobby-section {
    display: flex;
    align-items: stretch;
    gap: 2rem;
    flex-wrap: wrap;
}

.hobby-content-left,
.hobby-content-right {
    flex: 1;
    min-width: 300px;
    display: flex;
    flex-direction: column;
}

.hobby-content-left h2,
.hobby-content-right h2 {
    margin-top: 0;
}

.hobby-content-left p,
.hobby-content-right p {
    flex: 1;
    margin-bottom: 0;
}

.hobby-image-left,
.hobby-image-right {
    flex: 0 0 300px;
    min-width: 250px;
    display: flex;
    align-items: stretch;
}

.hobby-image-left > *,
.hobby-image-right > * {
    width: 100%;
    height: 100%;
}

.hobby-image-left img,
.hobby-image-right img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 12px;
}

/* Theatre image crop - show middle 50% vertically */
.theatre-image-container {
    width: 100%;
    height: 100%;
    overflow: hidden;
    position: relative;
    border-radius: 12px;
}

.theatre-image-container img {
    width: 100%;
    height: 200%;
    object-fit: cover;
    object-position: center center;
    position: absolute;
    left: 0;
}

/* Hiking image crop - show middle 50% horizontally */
.hiking-image-container {
    width: 100%;
    height: 100%;
    position: relative;
    border-radius: 12px;
}

.hiking-image-container img {
    width: 200%;
    height: 100%;
    object-fit: cover;
    object-position: center center;
    position: absolute;
    left: 10%;
    top: 0;
}

/* Responsive: stack on mobile */
@media screen and (max-width: 768px) {
    .hobby-section {
        flex-direction: column;
    }
    
    .hobby-image-left,
    .hobby-image-right {
        flex: 1 1 100%;
        width: 100%;
    }
    
    .hobby-image-left {
        order: -1;
    }
}

